<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Caarz</title>

  {{!-- Google Fonts --}}
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=PT+Sans+Caption&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Quicksand&display=swap" rel="stylesheet">

  {{!-- Stylesheets --}}
  <link rel="stylesheet" href="/css/booking.css">

</head>


<body>


  <!-- Booking -->

  <section id="booking">

    <div class="container">


      <div class="row">

        <!-- Column 1 -->
        <div class="col-sm">

          <div class="heading">
            <h2>{{model.title}}</h2>
          </div>


          <div class="carousal-container">
            <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active" data-interval="2000">
                  <img src="/{{model.imagePath}}" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item" data-interval="2000">
                  <img style="padding-bottom: 20px;" src="/images/1int.JPG" class="d-block w-100" alt="...">
                </div>
              </div>
              <a class="carousel-control-prev sidebutton" href="#carouselExampleInterval" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next sidebutton" href="#carouselExampleInterval" role="button" data-slide="next">
                <span class="carousel-control-next-icon"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
        </div>









        <!-- Column 2 -->
        <div class="col-sm">


          <!-- Pricing -->
          <div class="container">
            <div class="modelprice">$ {{model.priceStr}}</div>
            <div class="modelprice price-desc">Excluding taxes and order fee</div>
          </div>

          <div class="text-center placeorder-container">
            <button type="button" data-toggle="modal" data-target="#contactModal" class="btn btn-outline-dark placeorder"> PLACE ORDER
            </button>
          </div>





        </div>


      </div>




  </section>


  {{!-- Contact Form --}}
  <div id="contactModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Get in Touch with our Agent</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form>
            <div class="form-group">
              <label class="col-form-label">Name</label>
              <input type="text" class="form-control" id="username" placeholder="John">
            </div>

            <div class="form-group">
              <label>Email address</label>
              <input type="email" class="form-control" id="useremail" placeholder="name@gmail.com">
            </div>

            <div class="form-group">
              <label>Phone</label>
              <input type="tel" class="form-control" id="userphone" placeholder="9381046426" pattern="[0-9]{10}" required>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" id="contactClose" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" id="contactSubmit" class="btn btn-secondary">Submit</button>
        </div>
      </div>
    </div>
  </div>







</body>

</html>
